<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/productLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/productSectionLeft"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/productImage1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_square_place_holder" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/productName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/productSectionLeft"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="Dente91 Lactoferrin Mouthwash"
                        android:textColor="@color/colorToolbarHeader"
                        android:textSize="@dimen/_11sdp" />

                    <View
                        android:id="@+id/underLine1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/productName1"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:background="@drawable/shape_underline"
                        android:backgroundTint="@color/colorGreen" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/underLine1"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/proxima_nova_black"
                            android:includeFontPadding="false"
                            android:text="₹199.00"
                            android:textColor="@color/colorToolbarHeader"
                            android:textSize="@dimen/_12sdp" />


                        <ImageView
                            android:id="@+id/addCart1"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:background="@drawable/shape_ovel"
                            android:backgroundTint="@color/cartNormal"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_cart"
                            app:tint="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/productLayout2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/productSection"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/productImage2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_square_place_holder" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/productName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/productSection"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="Dente91 Lactoferrin Mouthwash"
                        android:textColor="@color/colorToolbarHeader"
                        android:textSize="@dimen/_8sdp" />

                    <View
                        android:id="@+id/underLineRight"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/productName2"
                        android:layout_marginStart="@dimen/_7sdp"

                        android:layout_marginTop="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:background="@drawable/shape_underline"
                        android:backgroundTint="@color/colorGreen" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/underLineRight"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productPrice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/proxima_nova_black"
                            android:includeFontPadding="false"
                            android:text="₹199.00"
                            android:textColor="@color/colorToolbarHeader"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/addCart2"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/shape_ovel"
                        android:backgroundTint="@color/cartNormal"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_cart"
                        app:tint="@color/white" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/productLayout3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/productSection1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/productImage3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_square_place_holder" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/productName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/productSection1"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="Dente91 Lactoferrin Mouthwash"
                        android:textColor="@color/colorToolbarHeader"
                        android:textSize="@dimen/_8sdp" />


                    <View
                        android:id="@+id/underLineRight1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/productName3"
                        android:layout_marginStart="@dimen/_7sdp"

                        android:layout_marginTop="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:background="@drawable/shape_underline"
                        android:backgroundTint="@color/colorGreen" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/underLineRight1"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productPrice3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/proxima_nova_black"
                            android:includeFontPadding="false"
                            android:text="₹199.00"
                            android:textColor="@color/colorToolbarHeader"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/addCart3"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/shape_ovel"
                        android:backgroundTint="@color/cartNormal"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_cart"
                        app:tint="@color/white" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</layout>
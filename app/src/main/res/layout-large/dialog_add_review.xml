<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingTop="@dimen/_20sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_20sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_7sdp">

                            <TextView
                                android:id="@+id/titleTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:text="Add Review"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />

                            <ImageView
                                android:tint="@color/orange"
                                android:id="@+id/dialogCloseImg"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_close_black" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:id="@+id/invRequestLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EditTextTitle"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:text="Your Rating" />

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/rate"
                                style="@style/Widget.MaterialRatingBar.RatingBar.Indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:isIndicator="true"
                                android:progressTint="#FFDF3E"
                                android:rating="3" />

                            <TextView
                                style="@style/EditTextTitleForLargeScreen"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:text="Review" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/companyEdtLayout"
                                style="@style/TextInputLayoutStyleForTabletScreen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorEnabled="false">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/companyEdt"
                                    style="@style/textInputEditTextForTabletWithoutIcon"
                                    android:hint="Your Review"
                                    android:inputType="text" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/_1sdp"
                                    android:src="@drawable/ic_attach_file"
                                    app:tint="@color/orange" />

                                <TextView
                                    style="@style/EditTextTitleForLargeScreen"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_7sdp"
                                    android:text="Attach File" />

                            </LinearLayout>


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:background="@drawable/shape_button_second"
                                android:backgroundTint="@color/orange"
                                android:fontFamily="@font/proxima_nova_extrabold"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingEnd="@dimen/_15sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:text="Submit"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>
</layout>
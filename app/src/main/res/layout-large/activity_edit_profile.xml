<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        android:orientation="vertical"
        android:theme="@style/Theme.Frimline.GREENSHADE"
        tools:context=".EditProfileActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/include_activity_toolbar_layout" />

        <ImageView
            android:id="@+id/backgroundLayar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_screen_bottom_background" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_billing_border"
                        android:orientation="vertical"
                        android:padding="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingEnd="@dimen/_7sdp">

                                <TextView
                                    style="@style/EditTextTitleForLargeScreen"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="First Name" />

                                <LinearLayout
                                    android:id="@+id/nameEdtLayout"
                                    style="@style/EditTextOverLayoutForLargeScreen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/_12sdp"
                                    android:paddingEnd="@dimen/_12sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/ic_person_outline_black_24dp" />

                                    <EditText
                                        android:id="@+id/nameEdt"
                                        style="@style/EditBoxWithoutIconsForLargeScreen"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null"
                                        android:hint="First Name" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_7sdp">

                                <TextView
                                    style="@style/EditTextTitleForLargeScreen"

                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="Last Name" />

                                <LinearLayout
                                    android:id="@+id/lnameEdtLayout"
                                    style="@style/EditTextOverLayoutForLargeScreen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/_12sdp"
                                    android:paddingEnd="@dimen/_12sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/ic_person_outline_black_24dp" />

                                    <EditText
                                        android:id="@+id/lnameEdt"
                                        style="@style/EditBoxWithoutIconsForLargeScreen"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@null"
                                        android:hint="Last Name" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            style="@style/EditTextTitleForLargeScreen"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Display Name" />

                        <LinearLayout
                            android:id="@+id/displayNameEdtLayout"
                            style="@style/EditTextOverLayoutForLargeScreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_person_outline_black_24dp" />

                            <EditText
                                android:id="@+id/displayNameEdt"
                                style="@style/EditBoxWithoutIconsForLargeScreen"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:hint="Display Name" />
                        </LinearLayout>

                        <TextView
                            style="@style/EditTextTitleForLargeScreen"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Email" />

                        <LinearLayout
                            android:id="@+id/emailEdtLayout"
                            style="@style/EditTextOverLayoutForLargeScreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_email_black_24dp" />

                            <EditText
                                android:id="@+id/emailEdt"
                                style="@style/EditBoxWithoutIconsForLargeScreen"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:hint="Email" />
                        </LinearLayout>

                        <TextView
                            style="@style/EditTextTitleForLargeScreen"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Phone No" />

                        <LinearLayout
                            android:id="@+id/phoneNoEdtLayout"
                            style="@style/EditTextOverLayoutForLargeScreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_phone" />

                            <EditText
                                android:id="@+id/phoneNoEdt"
                                style="@style/EditBoxWithoutIconsForLargeScreen"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:hint="Phone no." />
                        </LinearLayout>


                        <TextView
                            style="@style/EditTextTitleForLargeScreen"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="New Password" />

                        <LinearLayout
                            android:id="@+id/newPasswordLayout"
                            style="@style/EditTextOverLayoutForLargeScreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_lock_black_24dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="0dp"
                                android:background="@null"
                                android:padding="0dp"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    style="@style/EditBoxWithoutIconsForLargeScreen"
                                    android:id="@+id/newPasswordEdt"

                                    android:layout_width="match_parent"
                                    android:layout_margin="0dp"
                                    android:inputType="textPassword"
                                    android:padding="0dp"
                                    android:singleLine="true" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <TextView
                            style="@style/EditTextTitleForLargeScreen"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Cofirm Password" />

                        <LinearLayout
                            android:id="@+id/confirmPasswordLayout"

                            style="@style/EditTextOverLayoutForLargeScreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_lock_black_24dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="0dp"
                                android:background="@null"
                                android:padding="0dp"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/confirmPassword"
                                    style="@style/EditBoxWithoutIconsForLargeScreen"
                                    android:layout_width="match_parent"
                                    android:layout_margin="0dp"
                                    android:inputType="textPassword"
                                    android:padding="0dp"
                                    android:singleLine="true" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                     <include
                         android:id="@+id/includeBtn"
                         layout="@layout/common_button_match_width_layout"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>
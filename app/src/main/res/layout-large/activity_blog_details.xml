<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        android:orientation="vertical"
        android:theme="@style/Theme.Frimline.GREENSHADE">

        <include
            android:id="@+id/toolbar"
            layout="@layout/include_activity_toolbar_layout" />

        <ImageView
            android:id="@+id/backgroundLayar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_screen_bottom_background"
            app:tint="@color/orange" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_100sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_140sdp"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_billing_border"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_50sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:text="Oral Health: An Investment In Your
Overall Health"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_13sdp" />

                            <View
                                android:id="@+id/view1"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:background="@drawable/shape_underline"
                                android:backgroundTint="@color/orange" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="Your oral health is more important than you might realize! It impacts various aspects of your lives- from being healthy to feeling self-confident, from enjoying food and to personal relationships and more. So, it is necessary to focus on oral health as this can lead to problems that are bigger than an unpleasant smile. For many, the results of oral neglect may have been dental problems such as tooth decay and gum disease, but the effects of poor oral health can go further, leading to serious health consequences.

\n\nHere is a simple oral hygiene routine you can sink your teeth into for improving your dental hygiene and health."
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:text="Brushing:"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="Let us ‘brush up’ on the procedure:\n\nBrush your teeth twice a day for at least 2 minutes. While brushing, make sure to use a gentle circular motion to avoid damaging the enamel.

\n\nToothbrush :\n\nTry using soft-bristled toothbrushes, as they are gentle on teeth and gums while being able to remove bacteria and plaque. Also, replace your toothbrush about every 3-4 months or sooner, as the bristles and are no longer as effective."
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardUseCompatPadding="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/product_place" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:includeFontPadding="false"
                    android:text="Related Post"
                    android:textColor="@color/colorToolbarHeader"
                    android:textSize="@dimen/_15sdp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="3dp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/shape_underline"
                    android:backgroundTint="@color/orange" />
                <androidx.viewpager.widget.ViewPager
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp" />
                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsColor="#DDDDDD"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="8dp"
                    app:dotsSpacing="3dp"
                    app:dotsWidthFactor="2.5"
                    app:selectedDotColor="@color/orange"
                    app:progressMode="true"
                    />
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/blog1"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/productSectionLeft"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_120sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_7sdp">

                                    <ImageView
                                        android:id="@+id/productImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/product_place" />
                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:id="@+id/productName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/productSectionLeft"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/proxinova_semi_bold"
                                    android:includeFontPadding="false"
                                    android:maxLines="2"
                                    android:text="Oral Health: An Investment\nIn Your Overall Health"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_11sdp" />

                                <View
                                    android:id="@+id/view3"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="3dp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:background="@drawable/shape_underline"
                                    android:backgroundTint="@color/orange" />

                                <TextView
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"


                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_30sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text="Your oral health is more important
than you might realize! It impacts
various aspects of your lives..."
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip1"
                            style="@style/ChipStyleForTab"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@id/blog1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-45dp"
                            android:layout_marginBottom="0dp"
                            android:elevation="@dimen/_3sdp"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:shadowColor="@color/orange"
                            android:text="Explore More"
                            android:textAppearance="@style/ChipFontStyle"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/orange"
                            app:chipEndPadding="@dimen/_10sdp"
                            app:chipStartPadding="@dimen/_10sdp"
                            app:chipStrokeColor="@color/orange" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/blog2"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/productSectionLeft1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_120sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_7sdp">

                                    <ImageView
                                        android:id="@+id/productImage1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/product_place" />
                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:id="@+id/productName1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/productSectionLeft"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/proxinova_semi_bold"
                                    android:includeFontPadding="false"
                                    android:maxLines="2"
                                    android:text="Oral Health: An Investment\nIn Your Overall Health"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_11sdp" />

                                <View
                                    android:id="@+id/view4"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="3dp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:background="@drawable/shape_underline"
                                    android:backgroundTint="@color/orange" />

                                <TextView
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"


                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_30sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text="Your oral health is more important
than you might realize! It impacts
various aspects of your lives..."
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipC"
                            style="@style/ChipStyleForTab"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@id/blog2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-45dp"
                            android:layout_marginBottom="0dp"
                            android:elevation="@dimen/_3sdp"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:shadowColor="@color/orange"
                            android:text="Explore More"
                            android:textAppearance="@style/ChipFontStyle"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/orange"
                            app:chipEndPadding="@dimen/_10sdp"
                            app:chipStartPadding="@dimen/_10sdp"
                            app:chipStrokeColor="@color/orange" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qLogo"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/shape_question_answer_background"
                    android:backgroundTint="@color/orange"
                    android:fontFamily="@font/proxinova_semi_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Q"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/question"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@id/qLogo"
                    android:fontFamily="@font/proxinova_semi_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="Does Dente91 toothpaste help in discoloration of teeth?"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/aLogo"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/shape_question_answer_background"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/proxinova_semi_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="A"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/answer"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@id/aLogo"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="Dente91 toothpaste contains Hydroxyapatite in the form of n-HAP which lightens the shade of the teeth without the help of any additional abrasives or whitening agents."
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>
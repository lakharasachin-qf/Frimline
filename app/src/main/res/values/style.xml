<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Frimline" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorAccent">@color/colorToolbarHeader</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:typeface">serif</item>

    </style>
    <!-- Base application theme. -->

    <style name="Theme.FrimlineTRy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="android:typeface">serif</item>

        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorToolbarHeader</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Frimline.GREENSHADE" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="android:typeface">serif</item>

        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorToolbarHeader</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <!---->
    <style name="TextInputLayoutStyleForMediumScreen" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/proxinova_semi_bold</item>

        <item name="hintTextColor">@color/grey</item>
        <item name="boxCornerRadiusTopStart">@dimen/_25sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_25sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_25sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_25sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">1.2dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
        <item name="colorPrimary">@color/orange</item>

    </style>

    <style name="TextInputLayoutStyleForTabletScreen" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/proxinova_semi_bold</item>

        <item name="hintTextColor">@color/grey</item>
        <item name="boxCornerRadiusTopStart">@dimen/_25sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_25sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_25sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_25sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">1.2dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
        <item name="colorPrimary">@color/orange</item>

    </style>


    <style name="textInputEditTextForMediumScreen">
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textCursorDrawable">@null</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="paddingStart">@dimen/_15sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorToolbarHeader</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/proxinova_semi_bold</item>
    </style>


    <style name="textInputEditTextForTablet">
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:textColor">@color/colorToolbarHeader</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/proxinova_semi_bold</item>
    </style>
    <style name="textInputEditTextForTabletWithoutIcon">
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:textColor">@color/colorToolbarHeader</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/proxinova_semi_bold</item>
    </style>

    <style name="helperTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_8sdp</item>

        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="singleLine">true</item>
    </style>

    <!---->


    <style name="EditTextOverLayout">
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:background">@drawable/shape_editext_background</item>

    </style>

    <!--FOR LARGE SCREEN-->

    <style name="EditTextTitle">
        <item name="android:textColor">#6A6B74</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--FOR LARGE SCREEN-->
    <style name="EditTextTitleForLargeScreen">
        <item name="android:textColor">#6A6B74</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="EditBoxWithoutIcons">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/proxinova_semi_bold</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="singleLine">true</item>
    </style>
    <!--FOR LARGE SCREEN-->


    <style name="ChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/colorToolbarHeader</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStartPadding">@dimen/_15sdp</item>
        <item name="chipEndPadding">@dimen/_15sdp</item>
        <item name="chipStrokeColor">#E2E9EF</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- FOR LARGE SCREEN-->

    <style name="ChipStyleForTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/colorToolbarHeader</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStartPadding">@dimen/_15sdp</item>
        <item name="chipEndPadding">@dimen/_15sdp</item>
        <item name="chipStrokeColor">#E2E9EF</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>


    <style name="ChipFontStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/proxima_nova_bold</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="otpViewStyleForLarge">
        <item name="otp_box_background_active">@drawable/shape_otp_focued</item>
    </style>

    <style name="tabTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/proxinova_semi_bold</item>
    </style>
    <style name="tabTextStyleTablet">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="fontFamily">@font/proxinova_semi_bold</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorToolbarHeader</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorAccent">@color/colorToolbarHeader</item>
        <item name="android:windowBackground">@color/colorToolbarHeader</item>
        <item name="android:layout_gravity">bottom</item>
    </style>


    <style name="MyAlertDialogStyle_extend" parent="MyAlertDialogStyle">
        <item name="android:textColor">@color/colorToolbarHeader</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorAccent">@color/colorToolbarHeader</item>
        <item name="android:windowBackground">@color/colorToolbarHeader</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>
</resources>
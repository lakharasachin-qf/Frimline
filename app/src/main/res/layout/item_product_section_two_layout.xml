<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="290dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/productLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/productSectionLeft"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/productImage1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/product_one" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/productName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/productSectionLeft"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="Dente91 Lactoferrin Mouthwash"
                        android:textColor="@color/colorToolbarHeader"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:id="@+id/underLine1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/productName1"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:background="@drawable/shape_underline"
                        android:backgroundTint="@color/colorGreen" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/underLine1"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/proxima_nova_black"
                            android:includeFontPadding="false"
                            android:text="â‚¹199.00"
                            android:textColor="@color/colorToolbarHeader"
                            android:textSize="@dimen/_14sdp" />


                        <ImageView
                            android:id="@+id/addCart1"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:background="@drawable/shape_ovel"
                            android:backgroundTint="@color/colorGreen"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_cart"
                            app:tint="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="290dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/productLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/productImageContainer2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/productImage2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/product_one" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/productName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/productImageContainer2"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="Dente91 Lactoferrin Mouthwash"
                        android:textColor="@color/colorToolbarHeader"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:id="@+id/underLine2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="2dp"
                        android:layout_below="@+id/productName2"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:background="@drawable/shape_underline"
                        android:backgroundTint="@color/colorGreen" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/underLine2"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productPrice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/proxima_nova_black"
                            android:includeFontPadding="false"
                            android:text="â‚¹199.00"
                            android:textColor="@color/colorToolbarHeader"
                            android:textSize="@dimen/_14sdp" />


                        <ImageView
                            android:id="@+id/addCart2"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:background="@drawable/shape_ovel"
                            android:backgroundTint="@color/colorGreen"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_cart"
                            app:tint="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>
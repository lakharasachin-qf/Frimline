<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        android:orientation="vertical"
        tools:context=".MyAccountActivity">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_screen_bottom_background"
          />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_cover">

                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="30pt"
                        android:layout_marginTop="@dimen/_70sdp"
                        android:layout_marginEnd="30pt"
                        android:layout_marginBottom="@dimen/_7sdp"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="@dimen/_15sdp">

                            <ImageView
                                android:id="@+id/editIcon"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@drawable/shape_ovel"
                                android:backgroundTint="@color/colorGreen"
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/ic_edit_black_24dp" />

                            <TextView
                                android:id="@+id/nameTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_18sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_18sdp"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:includeFontPadding="false"
                                android:text="Miky Alene"
                                android:textAlignment="center"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_16sdp" />

                            <TextView
                                android:id="@+id/emailTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/nameTxt"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:includeFontPadding="false"
                                android:text="xyz@gmail.com"
                                android:textAlignment="center"
                                android:textColor="@color/colorEditText"
                                android:textSize="@dimen/_12sdp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/emailTxt"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:includeFontPadding="false"
                                android:text="+51 3453 3454 34"
                                android:textAlignment="center"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_12sdp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_for_my_account"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">

                                <ImageView
                                    android:layout_width="@dimen/_26sdp"
                                    android:layout_height="@dimen/_26sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:background="@drawable/shape_ovel"
                                    android:backgroundTint="@color/colorGreen"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_cart_my_account" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:includeFontPadding="false"
                                    android:text="Orders"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:id="@+id/addressLayout"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_for_my_account_active"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">

                                <ImageView
                                    android:layout_width="@dimen/_26sdp"
                                    android:layout_height="@dimen/_26sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:background="@drawable/shape_ovel"
                                    android:backgroundTint="@color/colorGreen"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_homeicon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:includeFontPadding="false"
                                    android:text="Addresses"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/accountDetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_for_my_account"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">

                                <ImageView
                                    android:layout_width="@dimen/_26sdp"
                                    android:layout_height="@dimen/_26sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:background="@drawable/shape_ovel"
                                    android:backgroundTint="@color/colorGreen"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_person_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:includeFontPadding="false"
                                    android:text="Account Details"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/shape_button"
            android:backgroundTint="@color/colorGreen"
            android:elevation="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/proxima_nova_extrabold"
                android:includeFontPadding="false"
                android:padding="@dimen/_11sdp"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>
    </RelativeLayout>
</layout>
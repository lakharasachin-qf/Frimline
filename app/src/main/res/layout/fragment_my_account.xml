<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        android:orientation="vertical"
        tools:context=".MyAccountActivity">

        <RelativeLayout
            android:id="@+id/loginContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <ImageView
                android:id="@+id/backgroundLayar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_screen_bottom_background"
                app:tint="@color/orange" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/profile_cover">

                            </ImageView>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="30pt"
                            android:layout_marginTop="@dimen/_70sdp"
                            android:layout_marginEnd="30pt"
                            android:layout_marginBottom="@dimen/_7sdp"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="@dimen/_15sdp">

                                <ImageView
                                    android:id="@+id/editIcon"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:background="@drawable/shape_ovel"
                                    android:backgroundTint="@color/orange"
                                    android:padding="@dimen/_3sdp"
                                    android:src="@drawable/ic_edit_black_24dp" />

                                <TextView
                                    android:id="@+id/nameTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_18sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/_18sdp"
                                    android:fontFamily="@font/proxima_nova_bold"
                                    android:includeFontPadding="false"
                                    android:text="Miky Alene"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_16sdp" />

                                <TextView
                                    android:id="@+id/emailTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/nameTxt"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:includeFontPadding="false"
                                    android:text="xyz@gmail.com"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorEditText"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/mobileNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/emailTxt"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:includeFontPadding="false"
                                    android:text="+51 3453 3454 34"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/orders"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/orderContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_for_my_account"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_7sdp">

                                    <ImageView
                                        android:id="@+id/orderIcon"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:background="@drawable/shape_ovel"
                                        android:backgroundTint="@color/orange"
                                        android:padding="@dimen/_5sdp"
                                        android:src="@drawable/ic_cart_my_account" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/_7sdp"
                                        android:layout_marginBottom="@dimen/_4sdp"
                                        android:fontFamily="@font/proxima_nova_regular"
                                        android:includeFontPadding="false"
                                        android:text="Orders"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorToolbarHeader"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView

                                android:id="@+id/addressLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/container"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_for_my_account"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_7sdp">

                                    <ImageView
                                        android:id="@+id/addressIcon"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:background="@drawable/shape_ovel"
                                        android:backgroundTint="@color/orange"
                                        android:padding="@dimen/_5sdp"
                                        android:src="@drawable/ic_homeicon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/_7sdp"
                                        android:layout_marginBottom="@dimen/_4sdp"
                                        android:fontFamily="@font/proxima_nova_regular"
                                        android:includeFontPadding="false"
                                        android:text="Addresses"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorToolbarHeader"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/accountDetails"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/accountDetailsContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_for_my_account"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_7sdp">

                                    <ImageView
                                        android:id="@+id/accountIcon"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:background="@drawable/shape_ovel"
                                        android:backgroundTint="@color/orange"
                                        android:padding="@dimen/_5sdp"
                                        android:src="@drawable/ic_person_icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/_7sdp"
                                        android:layout_marginBottom="@dimen/_4sdp"
                                        android:fontFamily="@font/proxima_nova_regular"
                                        android:includeFontPadding="false"
                                        android:text="Account Details"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorToolbarHeader"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:visibility="gone"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_15sdp">

                    <include
                        android:id="@+id/includeLoginBtn"
                        layout="@layout/common_button_match_width_layout" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_15sdp">

                    <include
                        android:id="@+id/includeSignupBtn"
                        layout="@layout/common_button_match_width_layout" />
                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/shape_button_second"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/proxima_nova_extrabold"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:visibility="visible">

            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/NoDataFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxinova_semi_bold"
                android:gravity="center"
                android:text="You are not Signed In."
                android:textAlignment="center"
                android:textSize="@dimen/_12sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/shape_button_second"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="center"
                android:paddingStart="@dimen/_25sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:text="Sign In"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/screenLoader"

            style="?android:attr/progressBarStyleLargeInverse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:elevation="@dimen/_20sdp"
            android:padding="@dimen/_135sdp"
            android:progressTint="@color/orange"
            android:visibility="gone" />

    </RelativeLayout>
</layout>
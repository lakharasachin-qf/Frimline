<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingTop="@dimen/_20sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_20sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_7sdp">

                            <TextView
                                android:id="@+id/titleTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:text="Add Review"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />

                            <ImageView
                                android:id="@+id/dialogCloseImg"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_close_black"
                                app:tint="@color/orange" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:id="@+id/invRequestLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">



                            <TextView
                                style="@style/EditTextTitle"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:text="Do you have any question? Ask Now!" />
                            <LinearLayout
                                android:id="@+id/otherNoteEdtLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape__address_editext_background"
                                android:paddingStart="@dimen/_20sdp"
                                android:paddingTop="@dimen/_15sdp"
                                android:paddingEnd="@dimen/_20sdp"
                                android:paddingBottom="@dimen/_15sdp">

                                <EditText
                                    android:id="@+id/otherInfoEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:fontFamily="@font/proxinova_semi_bold"
                                    android:gravity="top|left"
                                    android:hint="Type Here..."
                                    android:includeFontPadding="false"
                                    android:inputType="textMultiLine"
                                    android:lines="8"
                                    android:maxLines="10"
                                    android:minLines="5"
                                    android:scrollbars="vertical"

                                    android:textColor="@color/colorEditText"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>



                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:background="@drawable/shape_button_second"
                                android:backgroundTint="@color/orange"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:gravity="center"
                                android:paddingStart="@dimen/_25sdp"
                                android:paddingEnd="@dimen/_25sdp"
                                android:text="Submit"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>
</layout>
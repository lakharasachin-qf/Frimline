<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:splitMotionEvents="true"
        tools:context=".fragments.LeftFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_345sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"

            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/ic_fragment_backgroun" >


            <ScrollView
                android:clipToPadding="false"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_30sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_25sdp"
                    android:paddingEnd="@dimen/_25sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            style="@style/EditTextTitle"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:text="Please Sign in with email to continue using\nour app" />
                        <TextView
                            style="@style/EditTextTitle"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Username or Email Address" />

                        <LinearLayout
                            android:id="@+id/countryEdtLayout"
                            style="@style/EditTextOverLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_person_outline_black_24dp" />

                            <EditText
                                android:id="@+id/countryEdt"
                                style="@style/EditBoxWithoutIcons"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:hint="Enter here" />
                        </LinearLayout>

                        <TextView
                            style="@style/EditTextTitle"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Password" />

                        <LinearLayout
                            android:id="@+id/emailEdtLayout"
                            style="@style/EditTextOverLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_lock_black_24dp" />

                            <EditText
                                android:id="@+id/emailEdt"
                                style="@style/EditBoxWithoutIcons"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:hint="Password" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/shipToDiffCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:buttonTint="@color/colorGreen"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:layout_marginStart="-10dp"
                                android:includeFontPadding="false"
                                android:scaleX="0.80"
                                android:scaleY="0.80"
                                android:text="Remember me"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="Forgot Password?"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/shape_button"
                            android:backgroundTint="@color/colorGreen"
                            android:elevation="@dimen/_2sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/proxima_nova_extrabold"
                                android:includeFontPadding="false"
                                android:padding="@dimen/_11sdp"
                                android:text="Sign In"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>


        </RelativeLayout>

    </RelativeLayout>
</layout>
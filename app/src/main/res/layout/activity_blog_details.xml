<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:shimmer="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        android:orientation="vertical"
        android:theme="@style/Theme.Frimline.GREENSHADE">

        <include
            android:id="@+id/toolbar1"
            layout="@layout/include_activity_toolbar_layout" />

        <ImageView
            android:id="@+id/backgroundLayar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_screen_bottom_background"
            app:tint="@color/orange" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar1"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_70sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_140sdp"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_billing_border"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_50sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp">


                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:text="Oral Health: An Investment In Your\nOverall Health"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_14sdp" />

                            <View
                                android:id="@+id/view1"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:background="@drawable/shape_underline"
                                android:backgroundTint="@color/orange" />

                            <TextView
                                android:id="@+id/longDescriptionTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/demo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text="Your oral health is more important than you might realize! It impacts various aspects of your lives- from being healthy to feeling self-confident, from enjoying food and to personal relationships and more. So, it is necessary to focus on oral health as this can lead to problems that are bigger than an unpleasant smile. For many, the results of oral neglect may have been dental problems such as tooth decay and gum disease, but the effects of poor oral health can go further, leading to serious health consequences.

\n\nHere is a simple oral hygiene routine you can sink your teeth into for improving your dental hygiene and health."
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_11sdp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:fontFamily="@font/proxima_nova_bold"
                                    android:text="Brushing:"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text="Let us ‘brush up’ on the procedure:\n\nBrush your teeth twice a day for at least 2 minutes. While brushing, make sure to use a gentle circular motion to avoid damaging the enamel.

\n\nToothbrush :\n\nTry using soft-bristled toothbrushes, as they are gentle on teeth and gums while being able to remove bacteria and plaque. Also, replace your toothbrush about every 3-4 months or sooner, as the bristles and are no longer as effective."
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_11sdp" />
                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_25sdp"

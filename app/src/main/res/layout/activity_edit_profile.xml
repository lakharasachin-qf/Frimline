<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorScreenBackground"
        android:theme="@style/Theme.Frimline.GREENSHADE"
        android:layout_height="match_parent"
        tools:context=".EditProfileActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_26sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_left_arrow_black" />

                <TextView
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorToolbarHeader"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_20sdp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text="Edit Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_screen_bottom_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ScrollView
            android:layout_below="@+id/toolbar"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/_15sdp"
                        android:background="@drawable/shape_billing_border"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:paddingEnd="@dimen/_7sdp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    style="@style/EditTextTitle"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="First Name"/>

                                <LinearLayout
                                    android:id="@+id/nameEdtLayout"
                                    style="@style/EditTextOverLayout"
                                    android:paddingStart="@dimen/_12sdp"
                                    android:paddingEnd="@dimen/_12sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/ic_person_outline_black_24dp"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"/>
                                    <EditText
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/nameEdt"
                                        style="@style/EditBoxWithoutIcons"
                                        android:background="@null"
                                        android:hint="First Name"/>
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:paddingStart="@dimen/_7sdp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    style="@style/EditTextTitle"

                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="Last Name" />
                                <LinearLayout
                                    android:id="@+id/lnameEdtLayout"
                                    style="@style/EditTextOverLayout"
                                    android:paddingStart="@dimen/_12sdp"
                                    android:paddingEnd="@dimen/_12sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/ic_person_outline_black_24dp"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"/>
                                    <EditText
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        style="@style/EditBoxWithoutIcons"
                                        android:id="@+id/lnameEdt"
                                        android:background="@null"
                                        android:hint="Last Name"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            style="@style/EditTextTitle"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Display Name"/>
                        <LinearLayout
                            android:id="@+id/countryEdtLayout"
                            style="@style/EditTextOverLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_person_outline_black_24dp"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"/>
                            <EditText
                                android:layout_gravity="center_vertical"
                                android:id="@+id/countryEdt"
                                android:background="@null"
                                style="@style/EditBoxWithoutIcons"
                                android:hint="Display Name"/>
                        </LinearLayout>
                        <TextView
                            style="@style/EditTextTitle"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Email"/>
                        <LinearLayout
                            android:id="@+id/emailEdtLayout"
                            style="@style/EditTextOverLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_email_black_24dp"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"/>
                            <EditText
                                android:layout_gravity="center_vertical"
                                android:id="@+id/emailEdt"
                                style="@style/EditBoxWithoutIcons"
                                android:background="@null"
                                android:hint="Email" />
                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            style="@style/EditTextTitle"
                            android:text="Phone No"  />
                        <LinearLayout
                            android:id="@+id/phoneNoEdtLayout"
                            style="@style/EditTextOverLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_phone"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"/>
                            <EditText
                                android:layout_gravity="center_vertical"
                                android:id="@+id/phoneNoEdt"
                                style="@style/EditBoxWithoutIcons"
                                android:background="@null"
                                android:hint="Phone no." />
                        </LinearLayout>


                        <RelativeLayout
                            android:elevation="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:background="@drawable/shape_button"
                            android:backgroundTint="@color/colorGreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="@dimen/_15sdp"
                                android:padding="@dimen/_11sdp"
                                android:includeFontPadding="false"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/proxima_nova_extrabold"
                                android:textColor="@color/white"
                                android:text="Next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.LeftFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/healthCareImage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:scaleType="fitEnd"
                android:src="@drawable/mint_center__one_health_care" />

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="match_parent"
                android:background="@color/blue">

                <ImageView
                    android:id="@+id/oralHealthCareImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitEnd"
                    android:src="@drawable/mint_center__one_health_care"
                    android:tintMode="multiply"
                    android:visibility="gone"
                    app:tint="@color/blue" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/layout1"
                android:background="@color/orange">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitEnd"
                    android:src="@drawable/mint_center_two_health_care"
                    android:tintMode="multiply"
                    android:visibility="gone"
                    app:tint="@color/orange" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/commonImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:scaleType="centerCrop"
                android:src="@drawable/test_place_twoo"
                android:tintMode="multiply" />

            <LinearLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_above="@id/moreInfo"
                android:layout_below="@+id/goToStore"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_100sdp">

                <TextView
                    android:id="@+id/textTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_extrabold"
                    android:includeFontPadding="false"
                    android:text="Oral"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_35sdp" />

                <TextView
                    android:id="@+id/textBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxinova_semi_bold"
                    android:includeFontPadding="false"
                    android:text="Hygiene"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/shape_layout_image_round_background"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:includeFontPadding="false"
                    android:maxLines="4"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <!--            button-->
            <RelativeLayout
                android:id="@+id/moreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/_60sdp"
                android:background="@drawable/shape_layout_image_round_background"
                android:backgroundTint="@color/white"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_7sdp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/ic_left_arrow" />
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_toEndOf="@+id/icon"
                    app:shimmer_auto_start="true"
                    android:id="@+id/shimmer_view_container1"
                    app:shimmer_base_color="@color/orange"
                    android:layout_width="wrap_content"
                    app:shimmer_highlight_alpha="0"
                    app:shimmer_direction="right_to_left"
                    app:shimmer_highlight_color="#fff"
                    app:shimmer_base_alpha="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:shimmer_dropoff="80"
                    android:orientation="vertical"
                    shimmer:shimmer_duration="1500">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/icon"
                        android:textStyle="bold"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text="More Info"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12sdp" />
                </com.facebook.shimmer.ShimmerFrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/goToStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_70sdp"
                android:background="@drawable/shape_layout_image_round_background"
                android:backgroundTint="@color/white"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_7sdp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    app:shimmer_auto_start="true"
                    android:id="@+id/shimmer_view_container"
                    app:shimmer_base_color="@color/orange"
                    android:layout_width="wrap_content"
                    app:shimmer_highlight_alpha="0"
                    app:shimmer_highlight_color="#fff"
                    app:shimmer_base_alpha="1"
                    app:shimmer_direction="left_to_right"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:shimmer_dropoff="80"
                    android:orientation="vertical"
                    shimmer:shimmer_duration="1500">


                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text="Go to Store"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_12sdp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/shimmer_view_container"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_right_arrow" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
</layout>
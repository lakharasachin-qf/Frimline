<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@id/backgroundLayar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_screen_header" />

        <ImageView
            android:id="@+id/backgroundLayar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_screen_bottom_background"
            app:tint="@color/colorGreen" />


        <androidx.core.widget.NestedScrollView
            android:paddingBottom="@dimen/_14sdp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:paddingTop="80sp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_logo_green" />

                <RelativeLayout
                    android:id="@+id/tabContainer"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_2sdp"

                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/tab_indicator"
                    >



                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:gravity="center_horizontal"
                        android:text="Sign Up"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tabContainer"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="-22dp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/ic_fragment_backgroun">




                        <LinearLayout
                            android:layout_marginTop="@dimen/_30sdp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_25sdp"
                            android:paddingEnd="@dimen/_25sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:orientation="vertical">

                                <TextView
                                    style="@style/EditTextTitle"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="Please Sign in with email to continue using\nour app"
                                    android:textAlignment="center" />

                                <TextView
                                    style="@style/EditTextTitle"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="Username" />

                                <LinearLayout
                                    android:id="@+id/usernameLayout"
                                    style="@style/EditTextOverLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/ic_person_outline_black_24dp" />

                                    <EditText
                                        android:id="@+id/usernameEdt"
                                        style="@style/EditBoxWithoutIcons"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null"
                                        android:hint="Enter here" />
                                </LinearLayout>

                                <TextView
                                    style="@style/EditTextTitle"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="Email" />

                                <LinearLayout
                                    android:id="@+id/emailEdtLayout"
                                    style="@style/EditTextOverLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/ic_email_black_24dp" />

                                    <EditText
                                        android:id="@+id/emailEdt"
                                        style="@style/EditBoxWithoutIcons"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null"
                                        android:hint="Password" />
                                </LinearLayout>

                                <TextView
                                    style="@style/EditTextTitle"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="Phone Number" />

                                <LinearLayout
                                    android:id="@+id/mobileNoEdtLayout"
                                    style="@style/EditTextOverLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:src="@drawable/ic_phone_iphone" />

                                    <EditText
                                        android:id="@+id/mobileNoEdt"
                                        style="@style/EditBoxWithoutIcons"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null"
                                        android:hint="Password" />
                                </LinearLayout>

                                <TextView
                                    style="@style/EditTextTitle"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:layout_marginBottom="@dimen/_7sdp"
                                    android:text="Password" />

                                <LinearLayout
                                    android:id="@+id/confirmPasswordLayout"
                                    style="@style/EditTextOverLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_7sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_lock_black_24dp" />

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_margin="0dp"
                                        android:background="@null"
                                        android:padding="0dp"
                                        app:boxBackgroundColor="@color/white"
                                        app:boxStrokeWidth="0dp"
                                        app:boxStrokeWidthFocused="0dp"
                                        app:passwordToggleEnabled="true">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/confirmPassword"
                                            style="@style/EditBoxWithoutIcons"
                                            android:layout_width="match_parent"
                                            android:layout_margin="0dp"
                                            android:inputType="textPassword"
                                            android:padding="0dp"
                                            android:singleLine="true" />
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>


                                <include
                                    android:id="@+id/includeBtn"
                                    layout="@layout/common_button_match_width_layout"/>

                            </LinearLayout>
                        </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/signupTxt"
                    android:layout_below="@+id/section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text="Already have an account?  "
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/signupTxt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/proxima_nova_black"
                        android:text="Sign In"
                        android:textColor="@color/colorGreen"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>



    </RelativeLayout>

</layout>
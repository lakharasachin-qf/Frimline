<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:splitMotionEvents="true"
        tools:context=".fragments.LeftFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_285sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/ic_fragment_backgroun">


<!--            <ScrollView-->
<!--                android:id="@+id/scrollView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:paddingTop="@dimen/_35sdp"-->
<!--                android:scrollbars="none">-->

                <LinearLayout
                    android:paddingTop="@dimen/_35sdp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_25sdp"
                    android:paddingEnd="@dimen/_25sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/containerLinear"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hint"
                            style="@style/EditTextTitle"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Please Sign in with Mobile to continue using\nour app"
                            android:textAlignment="center" />

                        <TextView
                            style="@style/EditTextTitle"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Mobile Number" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/nameEdtLayout"
                            style="@style/TextInputLayoutStyleForMediumScreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="false"
                            app:errorIconDrawable="@null" >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/nameEdt"
                                style="@style/textInputEditTextForMediumScreen"
                                android:drawableStart="@drawable/edt_login_phone_icon"
                                 android:hint="XXXXXXXXXX"
                                android:maxLength="10"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/shipToDiffCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="-10dp"
                                android:buttonTint="@color/orange"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:includeFontPadding="false"
                                android:scaleX="0.80"
                                android:scaleY="0.80"
                                android:text="Remember me"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/forgetPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="Forgot Password?"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <include
                            android:id="@+id/includeBtn"
                            layout="@layout/common_button_match_width_layout" />
                    </LinearLayout>
                </LinearLayout>

<!--            </ScrollView>-->


        </RelativeLayout>

    </RelativeLayout>
</layout>
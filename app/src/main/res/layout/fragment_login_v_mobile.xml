<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:splitMotionEvents="true"
        tools:context=".fragments.LeftFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_285sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/ic_fragment_backgroun">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_35sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_25sdp"
                    android:paddingEnd="@dimen/_25sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            style="@style/EditTextTitle"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Please Sign in with email to continue using\nour app"
                            android:textAlignment="center" />

                        <TextView
                            style="@style/EditTextTitle"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="Mobile Number" />

                        <LinearLayout
                            android:id="@+id/mobileNoEdtLayout"
                            style="@style/EditTextOverLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_phone_iphone" />

                            <EditText
                                android:id="@+id/mobileNoEdt"
                                style="@style/EditBoxWithoutIcons"
                                android:layout_gravity="center_vertical"
                                android:inputType="number"
                                android:background="@null"
                                android:hint="+91 XXXXXXXXXX" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/shipToDiffCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:buttonTint="@color/orange"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:layout_marginStart="-10dp"
                                android:includeFontPadding="false"
                                android:scaleX="0.80"
                                android:scaleY="0.80"
                                android:text="Remember me"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="Forgot Password?"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <include
                            android:id="@+id/includeBtn"
                            layout="@layout/common_button_match_width_layout"/>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>


        </RelativeLayout>

    </RelativeLayout>
</layout>
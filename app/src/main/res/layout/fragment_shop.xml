<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        tools:context=".fragments.LeftFragment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_screen_bottom_background" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_70sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:includeFontPadding="false"
                    android:text="Top Rated Products"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="3dp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/shape_underline"
                    android:backgroundTint="@color/colorGreen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/productSectionLeft"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                app:cardCornerRadius="@dimen/_7sdp">

                                <ImageView
                                    android:id="@+id/productImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/product_one" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/productName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/productSectionLeft"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:includeFontPadding="false"
                                android:maxLines="2"
                                android:text="Dente91 Lactoferrin Mouthwash"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_10sdp" />

                            <View
                                android:id="@+id/underLine"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="2dp"
                                android:layout_below="@+id/productName"

                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:background="@drawable/shape_underline"
                                android:backgroundTint="#E6F0D6" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/underLine"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/productPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/proxima_nova_black"
                                    android:includeFontPadding="false"
                                    android:text="â‚¹199.00"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_12sdp" />


                                <ImageView
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="end"
                                    android:background="@drawable/shape_ovel"
                                    android:backgroundTint="@color/colorGreen"
                                    android:padding="@dimen/_4sdp"
                                    android:src="@drawable/ic_cart"
                                    app:tint="@color/white" />

                            </RelativeLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/productSectionLeft1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                app:cardCornerRadius="@dimen/_7sdp">

                                <ImageView
                                    android:id="@+id/productImage1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/product_one" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/productName1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/productSectionLeft1"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:includeFontPadding="false"
                                android:maxLines="2"
                                android:text="Dente91 Lactoferrin Mouthwash"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_10sdp" />

                            <View
                                android:id="@+id/underLine1"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="2dp"
                                android:layout_below="@+id/productName1"

                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:background="@drawable/shape_underline"
                                android:backgroundTint="#E6F0D6" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/underLine1"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/productPrice1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/proxima_nova_black"
                                    android:includeFontPadding="false"
                                    android:text="â‚¹199.00"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_12sdp" />


                                <ImageView
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="end"
                                    android:background="@drawable/shape_ovel"
                                    android:backgroundTint="@color/colorGreen"
                                    android:padding="@dimen/_4sdp"
                                    android:src="@drawable/ic_cart"
                                    app:tint="@color/white" />

                            </RelativeLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/productSectionLeft2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                app:cardCornerRadius="@dimen/_7sdp">

                                <ImageView
                                    android:id="@+id/productImage2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/product_one" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/productName2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/productSectionLeft2"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:includeFontPadding="false"
                                android:maxLines="2"
                                android:text="Dente91 Lactoferrin Mouthwash"
                                android:textColor="@color/colorToolbarHeader"
                                android:textSize="@dimen/_10sdp" />

                            <View
                                android:id="@+id/underLine2"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="2dp"
                                android:layout_below="@+id/productName2"

                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:background="@drawable/shape_underline"
                                android:backgroundTint="#E6F0D6" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/underLine2"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/productPrice2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/proxima_nova_black"
                                    android:includeFontPadding="false"
                                    android:text="â‚¹199.00"
                                    android:textColor="@color/colorToolbarHeader"
                                    android:textSize="@dimen/_12sdp" />


                                <ImageView
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="end"
                                    android:background="@drawable/shape_ovel"
                                    android:backgroundTint="@color/colorGreen"
                                    android:padding="@dimen/_4sdp"
                                    android:src="@drawable/ic_cart"
                                    app:tint="@color/white" />

                            </RelativeLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:scrollbars="none">


                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_55sdp"
                        android:clipToPadding="false"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp">

                        <com.google.android.material.chip.Chip
                            style="@style/ChipStyle"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="Skin care" />

                        <com.google.android.material.chip.Chip
                            style="@style/ChipStyle"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="Health Suppliment" />

                        <com.google.android.material.chip.Chip
                            style="@style/ChipStyle"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="Oral Hygine" />


                    </com.google.android.material.chip.ChipGroup>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:includeFontPadding="false"
                    android:text="Hot Products"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="3dp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/shape_underline"
                    android:backgroundTint="@color/colorGreen" />

                <include layout="@layout/include_hot_product_layout" />

                <include layout="@layout/include_hot_product_layout" />

                <include layout="@layout/include_hot_product_layout" />

                <include layout="@layout/include_hot_product_layout" />

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.chip.Chip

            style="@style/ChipStyle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_4sdp"
            android:shadowColor="@color/colorGreen"
            android:text="Filter"
            android:textColor="@color/colorToolbarHeader"
            app:chipIcon="@drawable/ic_filter"
            app:chipStrokeColor="@color/colorGreen" />

        <com.google.android.material.chip.Chip

            style="@style/ChipStyle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_4sdp"
            android:shadowColor="@color/colorGreen"
            android:text="Sort"
            android:textColor="@color/colorToolbarHeader"
            app:chipIcon="@drawable/ic_sort_black_24dp"
            app:chipStrokeColor="@color/colorGreen" />


    </RelativeLayout>
</layout>